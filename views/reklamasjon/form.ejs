<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<div class="container w-75">
  <div class="container contents-container mt-3">
    <div class="row flex-nowrap">
      <div class="col">
        <div class="text-center">
          <h1>Reklamasjon KVIK Alnabru</h1>
        </div>
      </div>
    </div>
  </div>
  <div class="container contents-container mt-3">
    <div class="row flex-nowrap">
      <div class="col">
        <div class="text-center">
          <h5>
            Ble ikke bestillingen som håpet? Send inn et reklamasjon-skjema, og
            vi tar kontakt med deg.
          </h5>
        </div>
      </div>
    </div>
  </div>
  <div class="container mt-3">
    <form
      id="reklamasjon-form"
      method="POST"
      action="/reklamasjon/send"
      enctype="multipart/form-data"
    >
      <!-- Name input -->
      <label for="">Info:</label>
      <div class="row mt-2">
        <div class="col">
          <input
            type="text"
            class="form-control"
            placeholder="Navn"
            name="name"
            required
          />
        </div>
        <div class="col">
          <input
            type="email"
            class="form-control"
            placeholder="Email"
            name="email"
            required
          />
        </div>
      </div>
      <div class="row mt-4 mb-2">
        <label for="q1">Hvordan opplevde du kundeservicen?</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="q1Radio"
          value="Dårlig"
          required
        />
        <label class="form-check-label" for="inlineRadio1">Dårlig</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="q1Radio"
          value="Nøytral"
        />
        <label class="form-check-label" for="inlineRadio2">Nøytral</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="q1Radio"
          value="Bra"
        />
        <label class="form-check-label" for="inlineRadio3">Bra</label>
      </div>
      <div class="row mt-4 mb-2">
        <label for="q1">Ville du rekkomendert oss til en venn?</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="q2Radio"
          value="Nei"
          required
        />
        <label class="form-check-label" for="inlineRadio1">Nei</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="q2Radio"
          value="Usikker"
        />
        <label class="form-check-label" for="inlineRadio2">Usikker</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="radio"
          name="q2Radio"
          value="Ja"
        />
        <label class="form-check-label" for="inlineRadio3">Ja</label>
      </div>
      <!-- Message input -->
      <div class="form-outline mt-4 mb-4">
        <label class="form-label" for="form4Example3"
          >Hvorfor valgte du som du gjorde?</label
        >
        <textarea
          class="form-control"
          rows="4"
          placeholder="Skriv her..."
          name="additionalText"
          required
        ></textarea>
      </div>
      <div class="g-recaptcha" data-sitekey="your_site_key"></div>
      <br />
      <button
        type="submit"
        value="submit"
        class="btn btn-primary btn-block mb-4"
      >
        Send
      </button>
    </form>
  </div>
</div>
<script src="../../public/scripts/reklamasjonForm.js"></script>
