<div class="container-fluid px-lg-4 px-xl-5">
    <!-- Breadcrumbs -->
    <div class="page-breadcrumb">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
        <li class="breadcrumb-item active">
          <a href="/dashboard/users">Brukere</a>
        </li>
        <li class="breadcrumb-item active"><%= bruker.name %> </li>
      </ul>
    </div>
    <!-- Page Header-->
    <div class="page-header">
      <h1 class="page-heading"><%= bruker.name %> </h1>
    </div>
    <section>
      <div class="row">
        <!-- Form Elements -->
        <div class="col-lg-10 col-xl-8 mb-5">
          <div class="card">
            <div class="card-header">
              <h4 class="card-heading">Profil:</h4>
            </div>
            <div class="card-body">
              <form class="form-horizontal" method="POST" action="/dashboard/users/edit/<%= bruker._id %>?_method=PUT">
                <div class="row">
                  <label class="col-md-3 form-label">Fullt navn</label>
                  <div class="col-md-9">
                    <input
                      class="form-control"
                      type="text"
                      name="name"
                      value="<%= bruker.name %>"
                      required
                    />
                  </div>
                </div>
                <hr class="bg-gray-400 my-4" />
                <div class="row">
                  <label class="col-md-3 form-label">Telefonnummer</label>
                  <div class="col-md-9">
                    <input
                      class="form-control"
                      type="tel"
                      name="telefon"
                      value="<%= bruker.telefon %>"
                      required
                    />
                  </div>
                </div>
                <hr class="bg-gray-400 my-4" />
                <div class="row">
                  <label class="col-md-3 form-label">E-mail</label>
                  <div class="col-md-9">
                    <input
                      class="form-control"
                      type="email"
                      name="username"
                      value="<%= bruker.username %>"
                      required
                    />
                  </div>
                </div>
                <hr class="bg-gray-400 my-4" />
                <div class="row">
                  <label class="col-md-3 form-label">Kj√∏nn<br /></label>
                  <div class="col-md-9">
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        id="customRadioInline1"
                        type="radio"
                        name="sex"
                        value="true"
                        required
                        <%= bruker.sex == "true" ? "checked": "" %>
                      />
                      <label class="custom-control-label" for="customRadioInline1"
                        >Mann</label
                      >
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        id="customRadioInline2"
                        type="radio"
                        name="sex"
                        value="false"
                        required
                        <%= bruker.sex == "false" ? "checked": "" %>
                      />
                      <label class="custom-control-label" for="customRadioInline2"
                        >Kvinne</label
                      >
                    </div>
                  </div>
                </div>
                <hr class="bg-gray-400 my-4" />
                <div class="row">
                  <label class="col-md-3 form-label">Rolle</label>
                  <div class="col-md-9 ms-auto select">
                    <select class="form-control rounded" name="rolle" required>
                      <option value="ansatt" <%= bruker.rolle == "ansatt" ? "selected": "" %>>Ansatt</option>
                      <option value="admin" <%= bruker.rolle == "admin" ? "selected": "" %>>Admin</option>
                      <option value="utvikler" <%= bruker.rolle == "utvikler" ? "selected": "" %>>Utvikler</option>
                    </select>
                  </div>
                </div>
                <hr class="bg-gray-500 my-4" />
                <div class="row">
                  <div class="col-md-9 ms-auto">
                    <button class="btn btn-danger">
                      <a href="/dashboard/users" class="text-decoration-none text-white"
                        >Avbryt</a
                      >
                    </button>
                    <button class="btn btn-success text-white" type="submit">
                      Oppdater
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="card mt-4">
            <div class="card-header">
              <h4 class="card-heading">Endre passord:</h4>
            </div>
            <div class="card-body">
              <form class="form-horizontal" method="POST" action="/dashboard/users/edit/password/<%= bruker._id %>?_method=PUT">
                <div class="row">
                  <label class="col-md-3 form-label">Nytt passord: </label>
                  <div class="col-md-9">
                    <input
                      class="form-control"
                      type="password"
                      name="password"
                      required
                    />
                  </div>
                </div>
                <hr class="bg-gray-500 my-4" />
                <div class="row">
                  <div class="col-md-9 ms-auto">
                    <button class="btn btn-danger">
                      <a href="/dashboard/users" class="text-decoration-none text-white"
                        >Avbryt</a
                      >
                    </button>
                    <button class="btn btn-success text-white" type="submit">
                      Oppdater
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  