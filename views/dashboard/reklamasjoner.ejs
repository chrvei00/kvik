  <!-- Page Header-->
  <div class="page-header d-flex justify-content-between align-items-center">
    <h1 class="page-heading">Reklamasjoner</h1>
  </div>
  <section class="mb-4">
    <div class="px-5 py-3 mb-4">
      <div class="row">
        <div class="col-12 col-lg-8 p-2">
          <div class="input-group mb-3">
            <button
              class="btn btn-outline-primary"
              id="button-addon1"
              type="button"
            >
              Søk...
            </button>
            <input
              class="form-control"
              type="text"
              placeholder=""
              aria-label="Example text with button addon"
              aria-describedby="button-addon1"
              id="searchInput"
              disabled
            />
          </div>
        </div>
        <div class="col-0 col-lg-1 p-2"></div>
        <div class="col-4 col-lg-1 p-2">
          <button class="btn btn-primary text-white text-uppercase" id="filterAll">Alle</button>
        </div>
        <div class="col-4 col-lg-1 p-2">
          <button class="btn btn-danger text-white text-uppercase <% if(filter == "false") { %> filter <% } %>" id="filterUnsolved">Åpne</button>
        </div>
        <div class="col-4 col-lg-1 p-2">
          <button class="btn btn-success text-white text-uppercase <% if(filter == "true") { %>filter<% } %>" id="filterSolved">Fullførte</button>
        </div>
      </div>
    </div>
    <hr class="text-gray-700" />
  </section>
  <section class="mb-4">
    <ul id="reklamasjonsList" class="noListStyle">
        <div class="row">
      <% for (skjema of reklamasjoner){ %>
        <li class="<%= skjema.finished %>">
      <div class="col-12">
        <a
          class="message card px-5 py-3 mb-4 <% if (!skjema.finished) { %> bg-hover-gradient-red border border-danger <% } else { %> bg-hover-gradient-green border border-success <% } %> text-decoration-none text-reset" 
          href="/dashboard/reklamasjoner/<%= skjema._id %>"
          >
          <div class="row">
            <div
              class="
                col-xl-1
                d-flex
                align-items-center
                flex-column flex-xl-row
                text-center text-md-left
              "
            >
              <span class="mb-0 text-muted">
                <%= skjema.reklamasjonsdate.getDate() %> / <%=skjema.reklamasjonsdate.getMonth() %> / <%=skjema.reklamasjonsdate.getFullYear() %>
              </span>
            </div>
            <div
              class="
                col-xl-2
                d-flex
                align-items-center
                flex-column flex-xl-row
                text-center text-md-left
              "
            >
              <h6 class="h5 p-1 mx-3 my-2 my-xl-0"><%= skjema.name %></h6>
            </div>
            <div
              class="
                col-xl-2
                d-flex
                align-items-center
                flex-column flex-xl-row
                text-center text-md-left
              "
            >
              <h6 class="h5 p-1 mx-3 my-2 my-xl-0"><%= skjema.ordnr %></h6>
            </div>
            <div
              class="
                col-xl-7
                d-flex
                align-items-center
                flex-column flex-xl-row
                text-center text-md-left
              "
            >
              <h6 class="h5 p-1 mx-3 my-2 my-xl-0">Beskrivelse:</h6>
              <p
                class="mb-0 mt-3 mt-lg-0 fifty"
                style="
                  overflow: hidden;
                  max-width: 50ch;
                  text-overflow: ellipsis;
                  white-space: nowrap;
                "
              >
                <%= skjema.beskrivelse %>
              </p>
            </div>
          </div>
        </a>
      </div>
      </li>
      <% } %>
    </div>
    </ul>
  </section>